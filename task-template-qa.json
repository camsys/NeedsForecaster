{
  "executionRoleArn": "arn:aws:iam::${ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/needs-forecaster-qa",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 8080,
          "protocol": "tcp",
          "containerPort": 8080
        }
      ],
      "memoryReservation": 4096,
      "image": "${ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/needs_forecaster:${IMG_VERSION}",
      "name": "needs-forecaster",
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-1:${ACCOUNT_ID}:parameter/needs-forecaster/dev/db_password"
        },
        {
          "name": "DB_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:${ACCOUNT_ID}:parameter/needs-forecaster/dev/db_url"
        }
      ],
      "environment": [
                   {
                       "name": "ENV",
                       "value": "qa"
                   }
      ]
    }
  ],
  "memory": "4096",
  "family": "needs-forecaster-qa",
  "networkMode": "awsvpc",
  "cpu": "2048"
}
